@model DoneMyHair.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@* Burdan işaretlediğim yere kadar default login formu , işaretten sonrası benim hazıradığım form *@
@* İşaret satır 42 de  *@

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}


@* İşaretli kısım *@

<form>
    <h3>Sign Up Here</h3>

    <label for="username">Username</label>
    <input type="text" placeholder="Username" id="username">

    <label for="name">Name and Surname(Owner)</label>
    <input type="text" placeholder="Name and Surname" id="name">

    <label for="description">Saloon Description</label>
    <input type="text" placeholder="Description" id="description">
    <!-- <label for="surname">Surname</label>
    <input type="text" placeholder="Surname" id="surname"> -->

    <label for="email">E-mail</label>
    <input type="email" placeholder="Email" id="email">

    <label for="phoneNumber">Phone Number</label>
    <input type="tel" placeholder="Phone Number" id="phoneNumber">

    <label for="adress">Adress</label>
    <input type="text" placeholder="Adress" id="adress">

    <label for="password">Password</label>
    <input type="password" placeholder="Password" id="password">

    <label for="password">Password Confirm</label>
    <input type="password" placeholder="Password Confirm" id="password">
    <div class="keep-login">
        <input type="checkbox">
        <label>I agree to the Terms of Service and Privacy Policy</label>
    </div>
    <button>Sign up</button>
    <p style="margin-top: 10px;">Already have an account ? <a href="./login.html">Login </a></p>
    <div class="divider">Or Signup With</div>

    <div class="social">
        <div class="go"><i class="fab fa-google"></i>  Google</div>
        <div class="fb"><i class="fab fa-facebook"></i>  Facebook</div>
    </div>
</form>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
